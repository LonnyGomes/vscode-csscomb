{
  "name": "vscode-csscomb",
  "displayName": "CSScomb",
  "description": "VS Code plugin for CSScomb â€” CSS coding style formatter",
  "version": "0.1.2",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^0.10.1"
  },
  "icon": "icon.png",
  "author": {
    "name": "Denis Malinochkin",
    "url": "www.canonium.com"
  },
  "homepage": "https://github.com/mrmlnc/vscode-csscomb/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-csscomb"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:csscomb.processEditor"
  ],
  "main": "./lib/extension",
  "contributes": {
    "commands": [
      {
        "command": "csscomb.processEditor",
        "title": "CSScomb (CSS coding style formatter)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSScomb configuration",
      "properties": {
        "csscomb.preset": {
          "default": "csscomb",
          "description": "One of the predefined configs (csscomb, yandex, zen) or custom config (object)."
        }
      }
    }
  },
  "devDependencies": {
    "vscode": "^0.11.1",
    "xo": "^0.12.1"
  },
  "dependencies": {
    "csscomb": "^3.1.8"
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "xo"
  },
  "xo": {
    "fix": true,
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "space-before-function-paren": 0
    }
  }
}
