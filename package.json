{
  "name": "vscode-csscomb",
  "displayName": "CSScomb",
  "description": "VS Code plugin for CSScomb â€” CSS coding style formatter",
  "version": "1.0.1",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^0.10.1"
  },
  "icon": "icon.png",
  "author": {
    "name": "Denis Malinochkin",
    "url": "www.canonium.com"
  },
  "homepage": "https://github.com/mrmlnc/vscode-csscomb/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-csscomb"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:csscomb.processEditor",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:sass",
    "onLanguage:scss"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [{
      "command": "csscomb.processEditor",
      "title": "CSScomb (CSS coding style formatter)"
    }],
    "configuration": {
      "type": "object",
      "title": "CSScomb configuration",
      "properties": {
        "csscomb.preset": {
          "type": ["object", "string"],
          "default": "csscomb",
          "description": "One of the predefined configs (csscomb, yandex, zen) or custom config (object)."
        },
        "csscomb.autoFormatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Auto format on save"
        }
      }
    }
  },
  "devDependencies": {
    "vscode": "^0.11.10",
    "xo": "^0.14.0"
  },
  "dependencies": {
    "co": "^4.6.0",
    "csscomb": "^3.1.8"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "arrow-parens": [2, "always"],
      "object-curly-spacing": [2, "always"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [2, "never"],
      "generator-star-spacing": [2, "after"]
    }
  }
}
